<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/LinearLayout_overview"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"

        android:layout_weight="1" >
        <LinearLayout
            android:id="@+id/linearlayout_class"
            android:layout_width="60dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_class"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="bottom"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout_daily"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearlayout_classs_daily"
                android:layout_width="60dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_class_daily"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"/>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/daily_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="bottom">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/daily_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayout_screens"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/LinearLayout_screen"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="80dp">

                        <TextView
                            android:id="@+id/textviews_screen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018/10/11  —  2018/10/11"
                            android:lineSpacingMultiplier="1.2"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_screens_install"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textviews_screens"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:singleLine = "true"
                        android:text="asdasdasdasdasdasd"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:id="@+id/LinearLayout_screen_install"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="150dp">




                        <DatePicker
                            android:id="@+id/date_picker"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dip"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="0dp"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner"
                            android:gravity="center"></DatePicker>

                        <NumberPicker
                            android:id="@+id/number_picker"
                            android:layout_width="30dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:layout_marginTop="1dip"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:calendarViewShown="false"
                            android:gravity="center"></NumberPicker>

                        <NumberPicker
                            android:id="@+id/minute_picker"
                            android:layout_width="30dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:layout_marginTop="1dip"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="0dip"
                            android:calendarViewShown="false"
                            android:gravity="center"></NumberPicker>


                        <LinearLayout
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>



                        <DatePicker
                            android:id="@+id/date_pickers"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dip"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="0dip"
                            android:layout_weight="1"
                            android:calendarViewShown="false"
                            android:datePickerMode="spinner"></DatePicker>

                        <NumberPicker
                            android:id="@+id/number_pickers"
                            android:textSize="18sp"
                            android:layout_width="30dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dip"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="0dip"
                            android:calendarViewShown="false"
                            android:gravity="center"></NumberPicker>

                        <NumberPicker
                            android:id="@+id/minute_pickers"
                            android:layout_width="30dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:layout_marginTop="1dip"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="10dp"
                            android:calendarViewShown="false"
                            android:gravity="center"></NumberPicker>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>




    <LinearLayout
        android:id="@+id/LinearLayout_overview_add"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"

        android:visibility="gone"
        android:layout_weight="1" >


        <LinearLayout
            android:id="@+id/linearlayout_class_bottom"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="20dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"

            android:layout_weight="1" >
            <LinearLayout
                android:id="@+id/linearlayout_class_add"
                android:layout_width="60dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_class_add"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"

                    android:gravity="bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_add"
                    android:gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearlayout_butt"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_height="50dp">


        <LinearLayout
            android:id="@+id/linearlayout_textviews_butt"
            android:layout_width="60dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textviews_butt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine = "true"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout_but_all"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/daily_textview_out"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="出库"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/daily_textview_enter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="入库"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/daily_textview_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="全部"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/overview_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="总览"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/daily_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="日志"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_number_add"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_height="match_parent">

        <com.example.xiaopengwarehouse.RoundImageView
            android:id="@+id/image_number_add"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/text_name_add"
                android:layout_width="match_parent"
                android:singleLine = "true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/text_data_add"
                    android:layout_width="match_parent"
                    android:singleLine = "true"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/fruit_number_adds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:background="@null"
                    android:maxLength="5"
                    android:inputType="number"
                    android:hint="修改的数量件"
                    android:gravity="center"
                    android:singleLine = "true"
                    android:lines="1"
                    android:textSize="25sp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/fruit_number_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:background="@null"
                    android:maxLength="5"
                    android:inputType="number"
                    android:hint="修改的数量"
                    android:gravity="center"
                    android:singleLine = "true"
                    android:lines="1"
                    android:textSize="25sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <!--添加品类-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/LinearLayout_view_class_adds"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_class_adds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_gravity="center"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="50dp">


            <TextView
                android:id="@+id/recycler_view_class_adds_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="完成"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/recycler_view_class_add_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>